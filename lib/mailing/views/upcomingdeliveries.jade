        div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 40px;line-height: 20px;")
          h4(style="color: rgb(51, 51, 51);display: block;float: right;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 18px;font-weight: bold;height: 20px;line-height: 20px;margin-bottom: 10px;margin-left: 0px;margin-right: 0px;margin-top: 10px;text-rendering: optimizelegibility;") #{delivery.timeframe.begin}
        div(style="-webkit-box-shadow: rgba(0, 0, 0, 0.0470588) 0px 1px 1px 0px inset;background-color: rgb(245, 245, 245);border-bottom-color: rgb(227, 227, 227);border-bottom-left-radius: 4px;border-bottom-right-radius: 4px;border-bottom-style: solid;border-bottom-width: 1px;border-left-color: rgb(227, 227, 227);border-left-style: solid;border-left-width: 1px;border-right-color: rgb(227, 227, 227);border-right-style: solid;border-right-width: 1px;border-top-color: rgb(227, 227, 227);border-top-left-radius: 4px;border-top-right-radius: 4px;border-top-style: solid;border-top-width: 1px;box-shadow: rgba(0, 0, 0, 0.0470588) 0px 1px 1px 0px inset;color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 90px;line-height: 20px;margin-bottom: 20px;min-height: 20px;padding-bottom: 19px;padding-left: 19px;padding-right: 19px;padding-top: 19px;")
          div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 45px;line-height: 20px;")   
            div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 31.623931623931625%;")
              label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Customer Name:")
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{delivery.info.customer.name.full}
            div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 31.623931623931625%;")
              label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Customer Email:")
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{delivery.info.customer.email}
            div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 31.623931623931625%;")
              label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Customer Phone:")
              | (+
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{delivery.info.customer.shipping_address.telephone.country_code}
              | ) 
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{delivery.info.customer.shipping_address.telephone.local_code}
              | -
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{delivery.info.customer.shipping_address.telephone.number}
          div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 45px;line-height: 20px;")
            div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 45px;line-height: 20px;margin-left: 0px;min-height: 30px;")
              label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Customer Address:")
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{delivery.info.customer.shipping_address.str}
        div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 45px;line-height: 20px;")
