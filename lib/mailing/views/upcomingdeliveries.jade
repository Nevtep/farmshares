        div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 45px;line-height: 20px;")
          each order in delivery.orders
            h5(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: bold;height: 20px;line-height: 20px;margin-bottom: 10px;margin-left: 0px;margin-right: 0px;margin-top: 10px;text-rendering: optimizelegibility;") #
              span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: bold;height: auto;line-height: 20px;text-rendering: optimizelegibility;") #{order._id}
              div(style="#{order.payments[order.payments.length -1].status[order.payments[order.payments.length -1].status.length -1].name == 'pending' ? 'color: rgb(204, 102, 0);display: block;float: right;font-family: \'Helvetica Neue\', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: bold;height: 20px;line-height: 20px;text-rendering: optimizelegibility;' :'color: rgb(102, 153, 0);display: block;float: right;font-family: \'Helvetica Neue\', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: bold;height: 20px;line-height: 20px;text-rendering: optimizelegibility;'}")
                span #{order.payments[order.payments.length -1].currency_code}
                |  
                span #{order.payments[order.payments.length -1].amount}
                |  
                span #{order.payments[order.payments.length -1].status[order.payments[order.payments.length -1].status.length -1].name}
                != __(" via ")
                span #{order.payments[order.payments.length -1].provider.name}
                
            div(style="-webkit-box-shadow: rgba(0, 0, 0, 0.0470588) 0px 1px 1px 0px inset;background-color: rgb(245, 245, 245);border-bottom-color: rgb(227, 227, 227);border-bottom-left-radius: 4px;border-bottom-right-radius: 4px;border-bottom-style: solid;border-bottom-width: 1px;border-left-color: rgb(227, 227, 227);border-left-style: solid;border-left-width: 1px;border-right-color: rgb(227, 227, 227);border-right-style: solid;border-right-width: 1px;border-top-color: rgb(227, 227, 227);border-top-left-radius: 4px;border-top-right-radius: 4px;border-top-style: solid;border-top-width: 1px;box-shadow: rgba(0, 0, 0, 0.0470588) 0px 1px 1px 0px inset;color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 90px;line-height: 20px;margin-bottom: 20px;min-height: 20px;padding-bottom: 19px;padding-left: 19px;padding-right: 19px;padding-top: 19px;")
              div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;")
                div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")
                  label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Product Name:")
                div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")        
                  label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Product Amount:")
                div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")
                  label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Product Quantity:")
                div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")
                  label(style="color: rgb(51, 51, 51);cursor: pointer;display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;font-weight: normal;height: 20px;line-height: 20px;margin-bottom: 5px;")= __("Product Type:")  
              each product in order.products
                div(style="color: rgb(51, 51, 51);display: block;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;")
                  div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")        
                    span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{product.name}
                  div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")
                    span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{product.amount}
                  div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")
                    span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{product.quantity}
                  div(style="box-sizing: border-box;color: rgb(51, 51, 51);display: block;float: left;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: 30px;line-height: 20px;margin-left: 0px;min-height: 30px;width: 23.076923076923077%;")
                    span(style="color: rgb(51, 51, 51);display: inline;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 14px;height: auto;line-height: 20px;") #{product.type}